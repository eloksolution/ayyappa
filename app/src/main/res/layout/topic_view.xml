<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:padding="20dp"
                android:layout_margin="4dp"
                card_view:cardCornerRadius="4dp"
                card_view:contentPadding="4dp"
                >

                <RelativeLayout android:id="@+id/ListPoi"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    xmlns:android="http://schemas.android.com/apk/res/android">

                    <ImageView
                        android:id="@+id/topic_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ayy1" />
                    <TextView
                        android:id="@+id/topic_view_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/topic_image_view"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="this is my group"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />
                    <TextView
                        android:id="@+id/topic_view_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/topic_view_title"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="description"
                        android:textColor="#666"
                        android:textSize="14dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Update Here"
                android:id="@+id/but_topic_update"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_disscussions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/topic_discussion"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="bottom" />
</LinearLayout>