<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardElevation="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/person_photo"
                android:src="@drawable/ayyappa_logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="14dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:layout_toRightOf="@+id/person_photo"
                android:text="suresh"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/text_heading"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_date"
               android:paddingLeft="57dp"
                android:layout_below="@+id/person_name"
                android:text="22"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_comment"
                android:layout_below="@+id/person_photo"
                android:paddingLeft="57dp"
                android:text="comment"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_view"
                android:layout_below="@+id/person_comment"
                android:background="@color/view" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>