<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- This could be your fragment container, or something -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/scrollView"
    android:background="@color/row_activated"
    tools:context=".MainActivity">
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:sl="http://schemas.android.com/tools"
        android:id="@+id/group_view_layout"
        >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >
        <android.support.v7.widget.CardView
            android:id="@+id/csearch_card"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@color/white"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <EditText
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:minHeight="45dp"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="16sp"
                android:id="@+id/search_name"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:hint="Search Swamies"
                android:maxLength="100"
                />

            <Button
                android:id="@+id/search"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
                android:onClick="searchMethod"
             android:text="Search"

             android:layout_gravity="right|center"
             android:background="@drawable/btn"/>
        </android.support.v7.widget.CardView>
</RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_margin"
            android:background="@color/view" />
        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:cardElevation="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:background="@drawable/cardstyle"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/heading_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deeksha"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_heading" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/small_view"
                    android:background="@color/view" />
                <include android:id="@+id/news_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/padi_recycler_home"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_margin"
            android:background="@color/view" />
        <android.support.v7.widget.CardView
            android:id="@+id/cv5"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:cardElevation="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/heading_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvContacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Groups"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_heading" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/small_view"
                    android:background="@color/view" />
                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:weightSum="3"
                    android:layout_margin="8dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:paddingRight="10dp"
                        android:id="@+id/create_group"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/btn"
                        android:text="Create Group"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/group_list"
                        android:layout_gravity="right|center"
                        android:src="@drawable/fullscreenicon"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_no_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="No Padipooja Create New"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:visibility="invisible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_groups_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:divider="@color/row_activated"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/fab_margin"
            android:background="@color/view" />
        <android.support.v7.widget.CardView
            android:id="@+id/cv4"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:cardElevation="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:weightSum="6">



                <LinearLayout
                    android:id="@+id/heading_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEvents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Padi Puja Events"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_heading" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/small_view"
                    android:background="@color/view" />

                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"

                        android:layout_gravity="center"
                        android:weightSum="3"
                        android:layout_margin="8dp">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:paddingRight="10dp"
                            android:id="@+id/padi_create"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:background="@drawable/btn"
                            android:text="Create Padi"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/PadiFull"
                            android:layout_gravity="right|center"
                            android:src="@drawable/fullscreenicon"/>
                    </LinearLayout>
                <TextView
                    android:id="@+id/tv_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="No Padipooja Create New"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:visibility="invisible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPadi_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/row_activated"
                    android:paddingBottom="@dimen/fab_marginn"
                    android:scrollbars="horizontal"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_margin"
            android:background="@color/view" />


        <android.support.v7.widget.CardView
            android:id="@+id/cv10"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:cardElevation="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:weightSum="1">



                <LinearLayout
                    android:id="@+id/heading_layouts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Contacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swamies Contacts"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_heading" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/small_view"
                    android:background="@color/view" />

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"

                    android:layout_gravity="center"
                    android:weightSum="3"
                    android:layout_margin="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/contacts_full"
                        android:layout_gravity="right|center"
                        android:src="@drawable/fullscreenicon"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/contacts_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/row_activated"
                    android:paddingBottom="@dimen/fab_marginn"
                    android:scrollbars="horizontal"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_margin"
            android:background="@color/view" />

        <android.support.v7.widget.CardView
            android:id="@+id/movies_card"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:cardElevation="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:weightSum="1">



                <LinearLayout
                    android:id="@+id/movies_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayyappa Movies"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_heading" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/small_view"
                    android:background="@color/view" />

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"

                    android:layout_gravity="center"
                    android:weightSum="3"
                    android:layout_margin="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/movies_full"
                        android:layout_gravity="right|center"
                        android:src="@drawable/fullscreenicon"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movies_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/row_activated"
                    android:paddingBottom="@dimen/fab_marginn"
                    android:scrollbars="horizontal"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_margin"
            android:background="@color/view" />
        <android.support.v7.widget.CardView
            android:id="@+id/cv8"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:cardElevation="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/heading_layout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_songs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Songs"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_heading" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/small_view"
                    android:background="@color/view" />
                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:weightSum="3"
                    android:layout_margin="8dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/songs_view"
                        android:layout_gravity="right|center"
                        android:src="@drawable/fullscreenicon"/>
                </LinearLayout>
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/songs_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/row_activated"
                        android:paddingBottom="@dimen/fab_marginn"
                        android:scrollbars="horizontal"/>

                </RelativeLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</ScrollView>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomNavView_Bar"
            android:background="@drawable/white_grey_border_top"
            app:menu="@menu/bottom_navigation_menu">


        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

</RelativeLayout>
