<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardElevation="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/person_photo"
                android:src="@drawable/ayyappa_logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="14dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="suresh"
                android:paddingLeft="4dp"
                android:paddingRight="5dp"
                android:layout_alignTop="@+id/person_photo"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_toEndOf="@+id/person_photo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_comment"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:lines="1"
                android:ellipsize="end"
                android:paddingLeft="4dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:layout_below="@+id/person_name"
                android:layout_alignLeft="@+id/person_name"
                android:layout_alignStart="@+id/person_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_date"
                android:paddingLeft="57dp"
                android:layout_alignParentRight="true"
                android:text="22 are going"

                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>