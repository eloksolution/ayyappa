<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardElevation="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/padi_image_list"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_groups" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_title"
                android:layout_toRightOf="@+id/padi_image_list"
                android:ellipsize="end"
                android:maxLines = "1"
                android:text="suresh"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/text_heading"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_desc"
                android:paddingLeft="60dp"
                android:layout_below="@+id/group_title"
                android:text="22 are going"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge_notification"
                android:layout_below="@+id/group_desc"
                android:paddingLeft="57dp"
                android:maxLength="20"
                android:ellipsize="end"
                android:text="group_desc"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dsate"
                android:layout_below="@+id/group_desc"
                android:layout_alignParentRight="true"
                android:maxLength="20"
                android:ellipsize="end"
                android:text="comment"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_view"
                android:layout_below="@+id/dsate"
                android:background="@color/view" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>