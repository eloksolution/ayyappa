<?xml version="1.5.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/popup"
    android:weightSum="1">
    <LinearLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_marginTop="5dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <android.support.v7.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:minHeight="45dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="16sp"
                        android:id="@+id/gname"
                        android:gravity="left|center"
                        android:textColor="@android:color/black"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:hint="Enter Group Name"
                        android:maxLength="100"
                        android:textCursorDrawable="@drawable/pen"
                        />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/events_data">

                    <android.support.v7.widget.CardView
                        android:id="@+id/contacts_no_card"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardBackgroundColor="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                         <Spinner
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textCursorDrawable="@drawable/pen"
                            android:paddingLeft="20dp"
                            android:textSize="16sp"
                            android:id="@+id/gcatagery"
                            android:gravity="left|center"
                            android:textColor="@android:color/black"
                             android:background="@drawable/txtbox_row_border"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:hint="Last Name"
                            android:inputType="text"
                            android:maxLength="15"
                            />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/emai_ad"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardBackgroundColor="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textCursorDrawable="@drawable/pen"
                            android:paddingLeft="20dp"
                            android:textSize="16sp"
                            android:id="@+id/gdescription"
                            android:gravity="left|center"
                            android:textColor="@android:color/black"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:hint="Description"
                            android:inputType="text"
                            android:maxLength="15"
                            />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/phone_number"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardBackgroundColor="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <Button
                            android:id="@+id/add_image"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="18dp"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:onClick="setFileToUpload"
                            android:text="Add Image"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/user_city"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        app:cardBackgroundColor="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ayyappa.eloksolutions.in.ayyappaap.adapter.ImageAspectRatio
                            android:background="@color/white"
                            android:visibility="gone"
                            android:id="@+id/img_view"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </android.support.v7.widget.CardView>




                </LinearLayout>

                <Button
                    android:id="@+id/butgcreate"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="18dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text="Create"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</LinearLayout>